<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="AppTheme.Toolbar.Subtitle" parent="TextAppearance.Material3.ActionBar.Subtitle">
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleCentered">false</item>
        <item name="subtitleCentered">true</item>
        <item name="navigationIconTint">?colorControlNormal</item>
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/AppTheme.Toolbar.Subtitle</item>
        
    </style>
    
<style name="ThemeOverlay.App.Toolbar" parent="">
    <item name="colorSurface">@color/md_theme_onPrimary</item>
    <item name="colorOnSurface">@color/md_theme_primary</item>
</style>
    

</resources>